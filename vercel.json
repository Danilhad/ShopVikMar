{
  "version": 2,
  "builds": [
    {
      "src": "vite.config.ts",
      "use": "@vite/vercel"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "methods": ["GET"]
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "ALLOWALL"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors https://*.telegram.org"
        }
      ]
    }
  ]
}